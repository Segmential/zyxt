// floats, ints, addition and printing
pub x := 4 + 54.3;
std.println(x);

// concatenation
pub y := 1 ~ 2 ~ 3;
std.println("Concatenating numbers", y);

// assignment
y += 234;
std.println("Adding 234 to y, it is now", y);

// type casting & type retrieval
pub z := 3@str;
std.println("Var z is", z, "and of type", z@type);

// booleans and if statements
pub a := false;
std.println(if a {
    std.println("a is true");
    2;
} else {
    std.println("a is false");
    1;
});

// scoping & returns
b := 1;
c := 1;
std.println(b, c);
{
    b = 2;
    c := 2;
    std.println(b, c);
    ret;
